#include <iostream>

using namespace std;

void main()
{
    int jam,menit,detik;
    int total_pakai,harga,total_menit;
    int diskon;

    cout<<"masukan jam : ";
    cin>>jam;
    cout<<"masukan menit: ";
    cin>>menit;
    cout<<"masukan detik: ";
    cout>>menit;

    total_pakai=(jam*60)+menit;

    if((detik>0)&&(total_pakai==0)){
        harga=150;
    }
    if(detik>0){
        harga=(total_pakai*150)+150;
    }
    else(harga=total_pakai*150;)

    if(harga==100000){
        diskon=harga*0.1;
        harga=harga-diskon;
    }
    cout<<endl;
    cout<<"lama percakapan"<<endl;
    cout<<"jam   :"<<jam<<endl;
    cout<<"menit :"<<menit<<endl;
    cout<<"detik :"<<detik<<endl;
    cout<<"total biaya = Rp.<<harga<<endl

    return 0;
